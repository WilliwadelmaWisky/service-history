<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="application.scene.controller.OpenWindowController"
      prefWidth="350" spacing="10"
>
    <padding>
        <Insets topRightBottomLeft="10"/>
    </padding>
    <HBox spacing="5">
        <TextField promptText="Enter a license plate number..." HBox.hgrow="ALWAYS" maxWidth="1000"
                   fx:id="_searchTextField"
        />
        <Button text="Search" onAction="#onSearch"/>
    </HBox>
    <ScrollPane maxHeight="600" fitToWidth="true">
        <VBox spacing="5" fx:id="_listVBox">
            <padding>
                <Insets topRightBottomLeft="5"/>
            </padding>
        </VBox>
    </ScrollPane>
</VBox>
